# ----------------------------------------------------------------------------
# Maven Wrapper startup batch script, version 3.2.0
# ----------------------------------------------------------------------------

set -euf

[ "${MVNW_VERBOSE-}" = "true" ] && set -x

if [ -z "${JAVA_HOME-}" ] ; then
  JAVACMD="$(command -v java 2>/dev/null || true)"
else
  JAVACMD="$JAVA_HOME/bin/java"
fi

if [ -z "$JAVACMD" ] ; then
  echo "Error: JAVA_HOME is not defined correctly." >&2
  echo "  We cannot execute $JAVACMD" >&2
  exit 1
fi

WRAPPER_DIR=$(CDPATH= cd -- "$(dirname -- "$0")" && pwd)

# ensure we are in the correct directory
WRAPPER_DIR=$(cd "$WRAPPER_DIR" && pwd)

MAVEN_PROJECTBASEDIR=${MAVEN_PROJECTBASEDIR:-"$WRAPPER_DIR"}

MAVEN_WRAPPER_DIR="$MAVEN_PROJECTBASEDIR/.mvn/wrapper"
MAVEN_WRAPPER_JAR="$MAVEN_WRAPPER_DIR/maven-wrapper.jar"
MAVEN_WRAPPER_PROPERTIES="$MAVEN_WRAPPER_DIR/maven-wrapper.properties"

if [ ! -f "$MAVEN_WRAPPER_JAR" ]; then
  echo "Missing $MAVEN_WRAPPER_JAR" >&2
  exit 1
fi

JAVA_OPTS=${JAVA_OPTS:-""}

exec "$JAVACMD" \
  $JAVA_OPTS \
  -classpath "$MAVEN_WRAPPER_JAR" \
  -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"